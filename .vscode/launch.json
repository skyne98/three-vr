{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Launch localhost (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "type": "msedge",
            "name": "Launch localhost (Edge)",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:5173/"
        },
    ]
}